generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 编写表结构

// 文章表
model Post {
  id       Int    @id @default(autoincrement()) //id 自增
  title    String
  content  String
  author   User   @relation(fields: [authorId], references: [id]) //外键
  authorId Int //关联id 把这个authoredId关联到user表的id
}

// 用户表 一个用户可以发多个文章 一对多关系
model User {
  id    Int    @id @default(autoincrement()) // id 自增
  name  String
  email String @unique //唯一
  posts Post[] // xx(alias) 表名[] 一对多的关系
}
